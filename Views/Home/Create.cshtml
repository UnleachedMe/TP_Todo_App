@using GitDemoToDoApp.Enums
@model GitDemoToDoApp.Models.TodoItem

<h2>Ajouter un Todo</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" asp-items="Html.GetEnumSelectList<ToDoStatus>()" class="form-select"></select>
    </div>
    <div class="mb-3">
        <label asp-for="DueDate" class="form-label"></label>
        <input asp-for="DueDate" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Ajouter</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
